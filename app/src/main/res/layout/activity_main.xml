<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.example.jiamao.uisample.MainActivity">

    <TextView
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:background="@drawable/bg_1"
     />

    <TextView

        android:layout_marginTop="20dp"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:background="@drawable/bg_2"
/>
    <com.example.jiamao.uisample.CustomTextView
        android:id="@+id/numTV"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:background="@drawable/bg_4"
        />

    <com.example.jiamao.uisample.CustomScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:background="#455564"
        android:clickable="true"
        android:gravity="center_vertical"
        android:clipChildren="false"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <TextView
            android:paddingLeft="20dp"
            android:background="#ffff00"
            android:id="@+id/left"
            android:gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="这就是个笑话"/>


            <TextView
                android:id="@+id/right"
                android:background="#0000ff"
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="删除"/>


    </com.example.jiamao.uisample.CustomScrollView>
    <com.example.jiamao.uisample.CustomListView
        android:descendantFocusability="blocksDescendants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"></com.example.jiamao.uisample.CustomListView>

</LinearLayout>
